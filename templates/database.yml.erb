# Database configuration for RedMine
production:
  adapter:  <%= @db_adapter %>
  database: <%= @db_name %>
<%if @db_adapter != 'sqlite' -%>
  host:     <%= @db_host %>
  username: <%= @db_user %>
  password: <%= @db_pass %>
  encoding: <%= @db_enc %>
<%end-%>
<%if @db_adapter == 'postgresql' -%>
  schema_search_path: <%= @db_schema %>
<%end-%>
